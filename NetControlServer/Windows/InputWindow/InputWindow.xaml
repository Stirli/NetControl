<Window x:Class="NetControlServer.Windows.InputWindow.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetControlServer.Windows.InputWindow"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Ввод данных" Height="300" Width="300" SizeToContent="Height">
    <DockPanel Margin="8">
        <TextBlock DockPanel.Dock="Top"  Text="{Binding Message}"/>
        <Button IsDefault="True" DockPanel.Dock="Bottom" Command="{Binding OkCommand}" Width="90" VerticalAlignment="Bottom" Content="OK"/>
        <TextBox Text="{Binding Input}" HorizontalAlignment="Stretch"/>
    </DockPanel>
</Window>
